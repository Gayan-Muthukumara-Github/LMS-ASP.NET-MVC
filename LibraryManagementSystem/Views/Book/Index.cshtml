@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div style="margin-bottom: 5px;"><center><h2>Book Details</h2></center></div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div style="margin-bottom: 5px;"><a href="@Url.Action("Create","Book")" class="btn btn-primary btn-sm">Add New Book</a></div>
    <div>
        <table class="table table-hover table-striped">
            <tr>
                <th>BookId</th>
                <th>BookReferenceNumber</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Publication</th>
                <th>Edition</th>
                <th>PublishedYear</th>
                <th>Category</th>
                <th>No of Copy</th>
                <th>Availble Copy</th>
                <th>Action</th>
            </tr>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i][0]</td>
                    <td>@Model.Rows[i][1]</td>
                    <td>@Model.Rows[i][2]</td>
                    <td>@Model.Rows[i][3]</td>
                    <td>@Model.Rows[i][4]</td>
                    <td>@Model.Rows[i][5]</td>
                    <td>@Model.Rows[i][6]</td>
                    <td>@Model.Rows[i][7]</td>
                    <td>@Model.Rows[i][8]</td>
                    <td>@Model.Rows[i][9]</td>
                    <td>@Model.Rows[i][10]</td>
                    <td>
                        <a href="@Url.Action("Edit","Book",new { @id = Model.Rows[i][0]})" class="btn btn-info btn-sm">Edit</a>
                        <a href="@Url.Action("Delete","Book",new { @id = Model.Rows[i][0]})" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>



</div>


