            @Html.EditorFor(model => model.BookReferenceNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BookReferenceNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
